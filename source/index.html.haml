- content_for(:page_class) { "homepage" }

%header.header
  .inner
    = link_to "Academy for Eating Disorders", "/", class: "logo"
    .top
      .left
        %h2.heading
          = link_to "/" do
            = image_tag "heading.png", alt: "Academy for Eating Disorders"
        .subheading
          %p.slogan= image_tag "slogan.png", alt: "Prevention. Treatment. Research. Education."
          = link_to "Menu", "#", class: "menu-icon"
      .right
        .action-bar
          #google_translate_element
          %form.form
            .input
              %i.icon-search
              %input{ type: "text", placeholder: "Search" }
        %ul.social-badges
          %li= link_to "Google+", "#", class: "badge icons-gplus"
          %li= link_to "Facebook", "https://www.facebook.com/pages/Academy-for-Eating-Disorders/56454591652", class: "badge icons-facebook"
          %li= link_to "LinkedIn", "http://www.linkedin.com/groups?about=&gid=1208317&trk=anet_ug_grppro", class: "badge icons-linkedin"
          %li= link_to "YouTube", "http://www.youtube.com/channel/UCJdjVELGnfTYYCX5bCZ920A", class: "badge icons-youtube"
          %li= link_to "Twitter", "https://twitter.com/aedweb", class: "badge icons-twitter"

    %nav.nav
      %ul
        %li= link_to "<span>About AED</span>", "#"
        %li= link_to "<span>Eating Disorders Information</span>", "#"
        %li= link_to "<span>Conference &amp; Education</span>", "#"
        %li= link_to "<span>Get Involved</span>", "#"
